{
    "version": "2.0.0",
    "presentation": {
      "echo": false,
      "reveal": "always",
      "focus": false,
      "panel": "dedicated",
      "showReuseMessage": true
    },
    "tasks": [
      {
        "label": "Cargo Doc",
        "dependsOn": [
          "Cargo Doc Build",
          "Cargo Doc Preview"
        ],
        // Mark as the default build task so cmd/ctrl+shift+b will create them
        "group": {
          "kind": "build",
          "isDefault": true
        },
        // Try start the task on folder open
        "runOptions": {
          "runOn": "folderOpen"
        }
      },
      {
        "label": "Cargo Bench",
        "dependsOn": [
          "Cargo Bench Run",
          "Cargo Bench Preview"
        ],
        // Mark as the default build task so cmd/ctrl+shift+b will create them
        "group": {
          "kind": "build",
          "isDefault": true
        },
        // Try start the task on folder open
        // "runOptions": {
        //   "runOn": "folderOpen"
        // }
      },
      {
        // The name that shows up in terminal tab
        "label": "Cargo Doc Build",
        // The task will launch a shell
        "type": "shell",
        "command": "make doc",
        // Set the shell type
        "options": {
          "shell": {
            "executable": "zsh",
            "args": ["-c"]
          }
        },
        // Mark as a background task to avoid the spinner animation on the terminal tab
        "isBackground": true,
        "problemMatcher": [],
        // Create the tasks in a terminal group
        "presentation": {
          "group": "my-group"
        }
      },
      {
        "label": "Cargo Doc Preview",
			  "command": "${input:open-wordle-docs}",
      },

      {
        // The name that shows up in terminal tab
        "label": "Cargo Bench Run",
        // The task will launch a shell
        "type": "shell",
        "command": "make bench",
        // Set the shell type
        "options": {
          "shell": {
            "executable": "zsh",
            "args": ["-c"]
          }
        },
        // Mark as a background task to avoid the spinner animation on the terminal tab
        "isBackground": true,
        "problemMatcher": [],
        // Create the tasks in a terminal group
        "presentation": {
          "group": "my-group"
        }
      },
      {
        "label": "Cargo Bench Preview",
			  "command": "${input:open-bench}",
      }
    ],
    "inputs": [
      {
        "id": "open-wordle-docs",
        "type": "command",
        "command": "livePreview.start.preview.atFileString",
        "args": "target/doc/wordle/index.html"
      },
      {
        "id": "open-bench",
        "type": "command",
        "command": "livePreview.start.preview.atFileString",
        "args": "target/criterion/report/index.html"
      }
    ]
  }
